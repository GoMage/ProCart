    $_item = $this->getItem();
?>
<?php if ($_item): ?>
    <a href="<?php echo $this->getProductUrl($_item) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'small_image')->resize(135) ?>" width="135" height="135" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
    <h3 class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
    <?php echo $this->getReviewsSummaryHtml($_item) ?>
    <?php echo $this->getPriceHtml($_item, true, '-upsell') ?>

    <?php if($_item->isSaleable() && Mage::getStoreConfig('gomage_procart/qty_settings/upsell_prods') != 6 && Mage::helper('gomage_procart')->isProCartEnable()): ?>
        <p><button type="button" title="<?php echo $this->__('Add to Cart') ?>" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')"><span><span><?php echo $this->__('Add to Cart') ?></span></span></button></p>
    <?php endif; ?>
<?php endif;?>
